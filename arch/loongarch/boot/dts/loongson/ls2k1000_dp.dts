#include "loongson2k1000.dtsi"
#include "loongson_panel_param.dtsi"

/ {
	model = "LS2K1000-DP-V10";

	chosen {
		stdout-path = "serial0:115200n8";
		bootargs = "earlycon";
	};

	/* not need memory node, we get memory info from boot params. */
	// memory {
	// 	name = "memory";
	// 	device_type = "memory";
	// 	reg =  <0 0x00200000 0 0x0ee00000
	// 		0 0x90000000 0 0x70000000>;
	// };

	reserved-memory {
		#address-cells = <2>;
		#size-cells = <2>;
		ranges;

		fb_memory: framebuffer {
			compatible = "shared-dma-pool";
			no-map;
			reg = <0 0x0b000000 0 0x04000000>; /* 64M */
		};

		linux,cma {
			compatible = "shared-dma-pool";
			reusable;
			size = <0 0x2000000>;
			linux,cma-default;
		};
	};

	pwmleds {
		compatible = "pwm-leds";

		led4 {
			label = "led4-pwm";
			pwms = <&pwm0 0 2550000>;
			max-brightness = <255>;
		};
	};

	leds {
		compatible = "gpio-leds";

		led1 {
			label = "led1";
			gpios = <&pioA 27 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "heartbeat";
			default-state = "on";
		};

		led2 {
			label = "led2";
			gpios = <&pioA 28 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led3 {
			label = "led3";
			gpios = <&pioA 29 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
	};

	gpio_keys {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;

		enter {
			label = "enter";
			linux,code = <28>;
			gpios = <&pioA 25 GPIO_ACTIVE_LOW>;
		};

		tab {
			label = "tab";
			linux,code = <15>;
			gpios = <&pioA 26 GPIO_ACTIVE_LOW>;
		};
	};

	lcd_backlight: backlight {
		compatible = "gpio-backlight";
		gpios = <&pioA 24 GPIO_ACTIVE_HIGH>;
		status = "okay";
	};

	panel: dvo-connector@0 {
		#address-cells = <1>;
		#size-cells = <0>;
		compatible = "panel-lvds", "auo,b101ean01";
		backlight = <&lcd_backlight>;

		/* lcd power on control gpio */
		/* enable-gpios = <&pioA 3 GPIO_ACTIVE_HIGH>; */
		// power-supply = <&vdd_lcd>;
		width-mm = <180>;
		height-mm = <110>;
		label = "ATK-MD0700R-1024x600";
		data-mapping = "jeida-24";

		status = "okay";

		panel-timing {
			clock-frequency = <51200000>;
			hactive = <1024>;
			vactive = <600>;
			hsync-len = <20>;
			hfront-porch = <160>;
			hback-porch = <140>;
			vfront-porch = <12>;
			vback-porch = <20>;
			vsync-len = <3>;
			de-active = <1>;
			hsync-active = <0>;
			vsync-active = <0>;
			pixelclk-active = <0>;
		};

		port@0 {
			reg = <0>;

			#address-cells = <1>;
			#size-cells = <0>;

			dvo_connector_in: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&dc_out_rgb1>;
			};
		};
	};
};

&spi0 {
	status = "okay";

	spi-flash@0 {
		compatible = "jedec,spi-nor";
		spi-max-frequency = <30000000>;
		reg = <0>; /* CS0 */

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0000000 0x100000>;
				read-only;
			};
		};
	};
};


&dc {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	memory-region = <&fb_memory>;

	// output-ports = <&dvo0>;

	dvo1: dvo@1 {
		compatible = "lsdc,dvo";
		/* 1 for connector 1 (DVO1) */
		reg = <1>;

		pinctrl-0 = <&dvo1_default>;
		pinctrl-names = "default";
	};

	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@1 {
			reg = <1>;
			dc_out_rgb1: endpoint {
				remote-endpoint = <&dvo_connector_in>;
			};
		};
	};
};

&pwm0 {
	status = "okay";
};

&pwm1 {
	status = "okay";
};

&pwm2 {
	status = "okay";
};

&pwm3 {
	status = "okay";
};

&sata {
	status = "okay";
	pinctrl-0 = <&ahci_default>;
	pinctrl-names = "default";
	ports-implemented = <0x1>;
};

&gmac0 {
	status = "okay";
};

&gmac1 {
	status = "okay";
};


&can0 {
	//nxp,external-clock-frequency = <125000000>;
	clocks = <&clks CLK_CAN>;
	net,tx_queue_len = <1024>;
	status = "okay";
};

&can1 {
	//nxp,external-clock-frequency = <125000000>;
	clocks = <&clks CLK_CAN>;
	net,tx_queue_len = <1024>;
	status = "okay";
};

&i2c0 {
	status = "okay";

	eeprom@57 {
		compatible = "atmel,24c32";
		reg = <0x57>;
		pagesize = <32>;
	};
};

&i2c1 {
	status = "okay";

	touchpad: gt911@5d {
		compatible = "goodix,gt911";
		reg = <0x5d>;
		interrupt-parent = <&icu>;
		interrupts = <60>;
		irq-gpios = <&pioA 0 GPIO_ACTIVE_LOW>;
	};
};

&uart1 {
	status = "okay";
};

&uart2 {
	status = "okay";
};

&uart3 {
	status = "okay";
};

&uart4 {
	status = "okay";
};

&uart5 {
	status = "okay";
};

&uart6 {
	status = "okay";
};

&otg {
	dr_mode = "host";
	status = "okay";
};

